@inject HttpClient Http
@inject NavigationManager Navigation
@inject AuthService Auth
@inject CultureService CultureService
@inject ILocalizerService L
@implements IDisposable

<div class="card">
    <div class="card-header @CardHeaderClass">
        <h3 class="mb-0">@CardTitle</h3>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @errorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success" role="alert">
                @successMessage
            </div>
        }

        <EditForm Model="@model" OnValidSubmit="HandleLogin" FormName="@FormName">
            <DataAnnotationsValidator />

            <div class="mb-3">
                <label for="identifier" class="form-label">@IdentifierLabel</label>
                <InputText id="identifier" class="form-control" @bind-Value="model.Identifier" placeholder="@IdentifierPlaceholder" />
                <ValidationMessage For="@(() => model.Identifier)" />
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">@PasswordLabel</label>
                <InputText id="password" type="password" class="form-control" @bind-Value="model.Password" placeholder="@PasswordPlaceholder" />
                <ValidationMessage For="@(() => model.Password)" />
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn @ButtonClass" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <span>@LoadingText</span>
                    }
                    else
                    {
                        <span>@ButtonText</span>
                    }
                </button>
            </div>

            @if (AdditionalLinks != null)
            {
                @AdditionalLinks
            }
        </EditForm>
    </div>
</div>

@code {

    [Parameter]
    public string CardTitle { get; set; } = "Login";

    [Parameter]
    public string FormName { get; set; } = "LoginForm";

    [Parameter]
    public string ApiEndpoint { get; set; } = "/api/v1/customers/login";

    [Parameter]
    public string RedirectUrl { get; set; } = "/profile";

    [Parameter]
    public string IdentifierLabel { get; set; } = "Email";

    [Parameter]
    public string IdentifierPlaceholder { get; set; } = "Enter your email";

    [Parameter]
    public string PasswordLabel { get; set; } = "Password";

    [Parameter]
    public string PasswordPlaceholder { get; set; } = "Enter your password";

    [Parameter]
    public string ButtonText { get; set; } = "Login";

    [Parameter]
    public string LoadingText { get; set; } = "Logging in...";

    [Parameter]
    public string ButtonClass { get; set; } = "btn-primary";

    [Parameter]
    public string CardHeaderClass { get; set; } = "";

    [Parameter]
    public bool ValidateAsEmail { get; set; } = true;

    [Parameter]
    public string IdentifierFieldName { get; set; } = "Email";

    [Parameter]
    public int RedirectDelayMs { get; set; } = 500;

    [Parameter]
    public RenderFragment? AdditionalLinks { get; set; }

    [Parameter]
    public EventCallback<string> OnLoginSuccess { get; set; }

    [SupplyParameterFromForm]
    private LoginModel model { get; set; } = new();
    
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading;

    protected override void OnInitialized()
    {
        CultureService.OnChange += OnCultureChanged;
    }

    private void OnCultureChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        CultureService.OnChange -= OnCultureChanged;
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            // Build the request object dynamically based on IdentifierFieldName
            var requestData = new Dictionary<string, string>
            {
                { IdentifierFieldName, model.Identifier },
                { "Password", model.Password }
            };

            var response = await Http.PostAsJsonAsync(ApiEndpoint, requestData);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<LoginResponse>();
                if (result?.Jwt != null)
                {
                    await Auth.LoginAsync(result.Jwt);
                    
                    // Invoke callback if provided
                    if (OnLoginSuccess.HasDelegate)
                    {
                        await OnLoginSuccess.InvokeAsync(result.Jwt);
                    }
                    
                    successMessage = L["Login successful!"];
                    
                    await Task.Delay(RedirectDelayMs);
                    
                    // Handle dynamic redirect URL (replace {id} with Auth.Id)
                    var finalUrl = RedirectUrl.Replace("{id}", Auth.Id?.ToString() ?? "");
                    Navigation.NavigateTo(finalUrl);
                }
                else
                {
                    errorMessage = L["Login failed"];
                }
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                errorMessage = L["Invalid credentials"];
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.BadRequest)
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.Error ?? L["Login failed"];
            }
            else
            {
                errorMessage = L["Login failed"];
            }
        }
        catch (Exception ex)
        {
            errorMessage = L.GetString("An error occurred: {0}", ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    public class LoginModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "This field is required")]
        public string Identifier { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Password is required")]
        public string Password { get; set; } = string.Empty;
    }

    public class LoginResponse
    {
        public string? Jwt { get; set; }
    }

    public class ErrorResponse
    {
        public string? Error { get; set; }
    }
}
