@page "/management/agents/create"
@inject HttpClient Http
@inject AuthService Auth
@inject NavigationManager Navigation
@inject CultureService CultureService
@inject ILocalizerService L
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>@L["Pages.Management.CreateAgent.PageTitle"]</PageTitle>

<div class="container mt-4">
    @if (!isInitialized)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!Auth.IsManagement)
    {
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="alert alert-warning">
                    <h5 class="alert-heading">@L["Pages.Management.CreateAgent.AccessDeniedTitle"]</h5>
                    <p class="mb-0">@L["Pages.Management.CreateAgent.LoginRequired"] <a href="/management/login">@L["Pages.Management.CreateAgent.LoginLink"]</a></p>
                </div>
            </div>
        </div>
    }
    else
    {
        <nav aria-label="breadcrumb" class="mb-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/management">@L["Pages.Management.CreateAgent.BreadcrumbDashboard"]</a></li>
                <li class="breadcrumb-item active">@L["Pages.Management.CreateAgent.BreadcrumbCreateAgent"]</li>
            </ol>
        </nav>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header text-center bg-primary text-white">
                        <h4 class="mb-0">@L["Pages.Management.CreateAgent.Title"]</h4>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
                            </div>
                        }

                        @if (showSuccess)
                        {
                            <div class="alert alert-success" role="alert">
                                <i class="bi bi-check-circle me-2"></i>@L["Pages.Management.CreateAgent.SuccessMessage"]
                            </div>
                        }

                        <EditForm Model="@model" OnValidSubmit="HandleSubmit" FormName="CreateAgentForm">
                            <DataAnnotationsValidator />

                            <div class="mb-3">
                                <label for="name" class="form-label">@L["Pages.Management.CreateAgent.Name"]</label>
                                <InputText id="name" class="form-control" @bind-Value="model.Name" placeholder="@L["Pages.Management.CreateAgent.NamePlaceholder"]" />
                                <ValidationMessage For="@(() => model.Name)" />
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">@L["Pages.Management.CreateAgent.Email"]</label>
                                <InputText id="email" class="form-control" @bind-Value="model.Email" placeholder="@L["Pages.Management.CreateAgent.EmailPlaceholder"]" />
                                <ValidationMessage For="@(() => model.Email)" />
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">@L["Pages.Management.CreateAgent.Password"]</label>
                                <InputText id="password" type="password" class="form-control" @bind-Value="model.Password" placeholder="@L["Pages.Management.CreateAgent.PasswordPlaceholder"]" />
                                <ValidationMessage For="@(() => model.Password)" />
                            </div>

                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">@L["Pages.Management.CreateAgent.ConfirmPassword"]</label>
                                <InputText id="confirmPassword" type="password" class="form-control" @bind-Value="model.ConfirmPassword" placeholder="@L["Pages.Management.CreateAgent.ConfirmPasswordPlaceholder"]" />
                                <ValidationMessage For="@(() => model.ConfirmPassword)" />
                            </div>

                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-primary" disabled="@isLoading">
                                    @if (isLoading)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                        @L["Pages.Management.CreateAgent.Processing"]
                                    }
                                    else
                                    {
                                        <i class="bi bi-person-plus me-2"></i>@L["Pages.Management.CreateAgent.CreateButton"]
                                    }
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool isInitialized;
    private bool isLoading;
    private bool showSuccess;
    private string? errorMessage;
    private AgentCreateModel model = new();

    protected override void OnInitialized()
    {
        CultureService.OnChange += OnCultureChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Auth.InitializeAsync();
            isInitialized = true;
            StateHasChanged();
        }
    }

    private void OnCultureChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private async Task HandleSubmit()
    {
        errorMessage = null;
        showSuccess = false;
        isLoading = true;

        try
        {
            // Validate passwords match
            if (model.Password != model.ConfirmPassword)
            {
                errorMessage = L["Pages.Management.CreateAgent.PasswordMismatch"];
                isLoading = false;
                return;
            }

            var request = new AgentCreateRequest
            {
                Name = model.Name,
                Email = model.Email,
                Password = model.Password
            };

            var httpRequest = new HttpRequestMessage(HttpMethod.Post, "/api/v1/agents");
            httpRequest.Content = JsonContent.Create(request);
            
            if (!string.IsNullOrEmpty(Auth.Token))
            {
                httpRequest.Headers.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", Auth.Token);
            }

            var response = await Http.SendAsync(httpRequest);

            if (response.IsSuccessStatusCode)
            {
                showSuccess = true;
                model = new AgentCreateModel(); // Reset form
                StateHasChanged();
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                errorMessage = !string.IsNullOrEmpty(error) ? error : L.GetString("Pages.Management.CreateAgent.CreateFailed");
            }
        }
        catch (Exception ex)
        {
            errorMessage = L.GetString("Pages.Management.CreateAgent.Error", ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    public void Dispose()
    {
        CultureService.OnChange -= OnCultureChanged;
    }

    public class AgentCreateModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Name is required")]
        public string Name { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Email is required")]
        [System.ComponentModel.DataAnnotations.EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Password is required")]
        [System.ComponentModel.DataAnnotations.MinLength(8, ErrorMessage = "Password must be at least 8 characters")]
        public string Password { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Please confirm your password")]
        [System.ComponentModel.DataAnnotations.Compare("Password", ErrorMessage = "Passwords do not match")]
        public string ConfirmPassword { get; set; } = string.Empty;
    }

    public class AgentCreateRequest
    {
        public string Name { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
}
