@page "/management/login"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject AuthService Auth
@inject CultureService CultureService
@inject ILocalizerService L
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>@L["Pages.Management.Login.PageTitle"]</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h3 class="mb-0">@L["Pages.Management.Login.Title"]</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @errorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success" role="alert">
                            @successMessage
                        </div>
                    }

                    <EditForm Model="@model" OnValidSubmit="HandleLogin" FormName="ManagementLoginForm">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label for="username" class="form-label">@L["Pages.Management.Login.Username"]</label>
                            <InputText id="username" class="form-control" @bind-Value="model.Username" placeholder="@L["Pages.Management.Login.UsernamePlaceholder"]" />
                            <ValidationMessage For="@(() => model.Username)" />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">@L["Pages.Management.Login.Password"]</label>
                            <InputText id="password" type="password" class="form-control" @bind-Value="model.Password" placeholder="@L["Pages.Management.Login.PasswordPlaceholder"]" />
                            <ValidationMessage For="@(() => model.Password)" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>@L["Pages.Management.Login.LoggingIn"]</span>
                                }
                                else
                                {
                                    <span>@L["Pages.Management.Login.LoginButton"]</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private ManagementLoginModel model { get; set; } = new();
    
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading;

    protected override void OnInitialized()
    {
        CultureService.OnChange += OnCultureChanged;
    }

    private void OnCultureChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        CultureService.OnChange -= OnCultureChanged;
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var request = new ManagementLoginRequest
            {
                Username = model.Username,
                Password = model.Password
            };

            var response = await Http.PostAsJsonAsync("/api/v1/management/login", request);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<ManagementLoginResponse>();
                if (result?.Jwt != null)
                {
                    await Auth.LoginAsync(result.Jwt);
                    successMessage = L["Pages.Management.Login.LoginSuccessful"];

                    await Task.Delay(1000);
                    Navigation.NavigateTo("/management");
                }
                else
                {
                    errorMessage = L["Pages.Management.Login.LoginFailed"];
                }
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                errorMessage = L["Pages.Management.Login.InvalidCredentials"];
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.BadRequest)
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.Error ?? L["Pages.Management.Login.LoginFailed"];
            }
            else
            {
                errorMessage = L["Pages.Management.Login.LoginFailed"];
            }
        }
        catch (Exception ex)
        {
            errorMessage = L.GetString("Pages.Management.Login.ErrorOccurred", ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    public class ManagementLoginModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Username is required")]
        public string Username { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Password is required")]
        public string Password { get; set; } = string.Empty;
    }

    public class ManagementLoginRequest
    {
        public string Username { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }

    public class ManagementLoginResponse
    {
        public string? Jwt { get; set; }
    }

    public class ErrorResponse
    {
        public string? Error { get; set; }
    }
}
