@page "/"
@inject HttpClient Http
@inject AuthService Auth
@inject ILocalizerService L
@inject CultureService CultureService
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>@L["Pages.Home.PageTitle"]</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1>@L["Pages.Home.PageHeader"]</h1>

            @L["Pages.Home.Welcome"]

            <p>@L["Pages.Home.TeaserMessage"]</p>

            @if (isLoading)
            {
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">@L["Pages.Home.Loading"]</span>
                    </div>
                </div>
            }
            else
            {
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @errorMessage
                    </div>
                }

                @if (partners == null || !partners.Any())
                {
                    <div class="alert alert-info">
                        @L["Pages.Home.NoRestaurants"]
                    </div>
                }
                else
                {
                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                        @foreach (var partner in partners)
                        {
                            <div class="col">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">@partner.Name</h5>
                                        <p class="card-text text-muted">
                                            <i class="bi bi-geo-alt"></i> @partner.Address
                                        </p>
                                    </div>
                                    <div class="card-footer bg-transparent">
                                        <a href="/customer/partners/@partner.Id/menu" class="btn btn-primary w-100">
                                            @L["Pages.Home.ViewMenu"]
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    @if (partnersResponse != null && partnersResponse.TotalPages > 1)
                    {
                        <nav aria-label="Partners pagination" class="mt-4">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                                    <a class="page-link" href="#" @onclick="() => ChangePage(currentPage - 1)" @onclick:preventDefault>
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="visually-hidden">Previous</span>
                                    </a>
                                </li>
                                
                                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(partnersResponse.TotalPages, currentPage + 2); i++)
                                {
                                    var pageNumber = i; // Capture loop variable
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a class="page-link" href="#" @onclick="() => ChangePage(pageNumber)" @onclick:preventDefault>@i</a>
                                    </li>
                                }
                                
                                <li class="page-item @(currentPage >= partnersResponse.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="#" @onclick="() => ChangePage(currentPage + 1)" @onclick:preventDefault>
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="visually-hidden">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    }
                    
                    @if (Auth.IsLoggedIn)
                    {
                        <div class="text-center mt-4">
                            <a href="/customer/partners" class="btn btn-primary">@L["Pages.Home.SeeAllRestaurants"]</a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center mt-4">
                            <a href="/login" class="btn btn-outline-primary">@L["Pages.Home.LoginToViewAllRestaurants"]</a>
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>

@code {
    private PaginatedPartnersResponse? partnersResponse;
    private List<PartnerResponse>? partners;
    private string? errorMessage;
    private bool isLoading = true;
    private int currentPage = 1;
    private const int PageSize = 10;

    protected override void OnInitialized()
    {
        CultureService.OnChange += OnCultureChanged;
        Auth.OnChange += OnAuthChanged;
    }

    private void OnCultureChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private void OnAuthChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        CultureService.OnChange -= OnCultureChanged;
        Auth.OnChange -= OnAuthChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Auth.InitializeAsync();
            await LoadPartners();
            StateHasChanged();
        }
    }

    private async Task LoadPartners()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var offset = (currentPage - 1) * PageSize;
            var response = await Http.GetAsync($"/api/v1/partners?offset={offset}&limit={PageSize}");

            if (response.IsSuccessStatusCode)
            {
                partnersResponse = await response.Content.ReadFromJsonAsync<PaginatedPartnersResponse>();
                partners = partnersResponse?.Partners?.ToList();
            }
            else
            {
                errorMessage = L["Pages.Home.LoadFailed"];
            }
        }
        catch (Exception ex)
        {
            errorMessage = L.GetString("Pages.Home.ErrorOccurred", ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ChangePage(int page)
    {
        if (page < 1 || (partnersResponse != null && page > partnersResponse.TotalPages))
        {
            return;
        }
        
        currentPage = page;
        await LoadPartners();
        StateHasChanged();
    }

    public class PartnerResponse
    {
        public int Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public string Address { get; set; } = string.Empty;
    }

    public class PaginatedPartnersResponse
    {
        public IEnumerable<PartnerResponse> Partners { get; set; } = new List<PartnerResponse>();
        public int TotalCount { get; set; }
        public int Page { get; set; }
        public int PageSize { get; set; }
        public int TotalPages { get; set; }
    }
}
