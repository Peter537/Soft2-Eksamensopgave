@page "/partner/login"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject AuthService Auth
@inject CultureService CultureService
@inject ILocalizerService L
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>@L["Pages.Partner.Login.PageTitle"]</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">@L["Pages.Partner.Login.Title"]</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @errorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success" role="alert">
                            @successMessage
                        </div>
                    }

                    <EditForm Model="@model" OnValidSubmit="HandleLogin" FormName="PartnerLoginForm">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label for="email" class="form-label">@L["Pages.Partner.Login.Email"]</label>
                            <InputText id="email" class="form-control" @bind-Value="model.Email" placeholder="@L["Pages.Partner.Login.EmailPlaceholder"]" />
                            <ValidationMessage For="@(() => model.Email)" />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">@L["Pages.Partner.Login.Password"]</label>
                            <InputText id="password" type="password" class="form-control" @bind-Value="model.Password" placeholder="@L["Pages.Partner.Login.PasswordPlaceholder"]" />
                            <ValidationMessage For="@(() => model.Password)" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>@L["Pages.Partner.Login.LoggingIn"]</span>
                                }
                                else
                                {
                                    <span>@L["Pages.Partner.Login.LoginButton"]</span>
                                }
                            </button>

                            <div class="mt-3 text-center">
                                <p class="mb-0">@L["Pages.Partner.Login.NoAccount"] <a href="/partner/register">@L["Pages.Partner.Login.RegisterHere"]</a></p>
                            </div>

                            <hr class="my-3" />

                            <div class="text-center">
                                <p class="mb-1">@L["Pages.Partner.Login.CustomerQuestion"]</p>
                                <a href="/login">@L["Pages.Partner.Login.CustomerLogin"]</a>
                            </div>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private PartnerLoginModel model { get; set; } = new();
    
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading;

    protected override void OnInitialized()
    {
        CultureService.OnChange += OnCultureChanged;
    }

    private void OnCultureChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        CultureService.OnChange -= OnCultureChanged;
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var request = new PartnerLoginRequest
            {
                Email = model.Email,
                Password = model.Password
            };

            var response = await Http.PostAsJsonAsync("/api/v1/partners/login", request);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<PartnerLoginResponse>();
                if (result?.Jwt != null)
                {
                    await Auth.LoginAsync(result.Jwt);
                    successMessage = L["Pages.Partner.Login.LoginSuccessful"];

                    await Task.Delay(1000);
                    Navigation.NavigateTo($"/partner/{Auth.Id}/incoming-orders");
                }
                else
                {
                    errorMessage = L["Pages.Partner.Login.LoginFailed"];
                }
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                errorMessage = L["Pages.Partner.Login.InvalidCredentials"];
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.BadRequest)
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.Error ?? L["Pages.Partner.Login.LoginFailed"];
            }
            else
            {
                errorMessage = L["Pages.Partner.Login.LoginFailed"];
            }
        }
        catch (Exception ex)
        {
            errorMessage = L.GetString("Pages.Partner.Login.ErrorOccurred", ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    public class PartnerLoginModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Email is required")]
        [System.ComponentModel.DataAnnotations.EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Password is required")]
        public string Password { get; set; } = string.Empty;
    }

    public class PartnerLoginRequest
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }

    public class PartnerLoginResponse
    {
        public string? Jwt { get; set; }
    }

    public class ErrorResponse
    {
        public string? Error { get; set; }
    }
}
