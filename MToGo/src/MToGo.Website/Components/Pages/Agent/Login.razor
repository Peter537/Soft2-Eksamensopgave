@page "/agent/login"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject AuthService Auth
@inject CultureService CultureService
@inject ILocalizerService L
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>@L["Pages.Agent.Login.PageTitle"]</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">@L["Pages.Agent.Login.Title"]</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @errorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success" role="alert">
                            @successMessage
                        </div>
                    }

                    <EditForm Model="@model" OnValidSubmit="HandleLogin" FormName="AgentLoginForm">
                        <DataAnnotationsValidator />
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">@L["Pages.Agent.Login.Email"]</label>
                            <InputText id="email" class="form-control" @bind-Value="model.Email" placeholder="@L["Pages.Agent.Login.EmailPlaceholder"]" />
                            <ValidationMessage For="@(() => model.Email)" />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">@L["Pages.Agent.Login.Password"]</label>
                            <InputText id="password" type="password" class="form-control" @bind-Value="model.Password" placeholder="@L["Pages.Agent.Login.PasswordPlaceholder"]" />
                            <ValidationMessage For="@(() => model.Password)" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>@L["Pages.Agent.Login.LoggingIn"]</span>
                                }
                                else
                                {
                                    <span>@L["Pages.Agent.Login.LoginButton"]</span>
                                }
                            </button>
                        </div>

                        <div class="mt-3 text-center">
                            <p class="mb-0">@L["Pages.Agent.Login.NoAccount"] <a href="/agent/register">@L["Pages.Agent.Login.RegisterHere"]</a></p>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private AgentLoginModel model { get; set; } = new();
    
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Initialize auth then check if already logged in
            await Auth.InitializeAsync();
            
            if (Auth.IsLoggedIn && Auth.IsAgent)
            {
                Navigation.NavigateTo("/agent/orders");
            }
        }
    }

    protected override void OnInitialized()
    {
        CultureService.OnChange += OnCultureChanged;
    }

    private void OnCultureChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        CultureService.OnChange -= OnCultureChanged;
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var response = await Http.PostAsJsonAsync("/api/v1/agents/login", model);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<AgentLoginResponse>();
                if (result?.Jwt != null)
                {
                    // Store the JWT token using AuthService (persists to localStorage)
                    await Auth.LoginAsync(result.Jwt);
                    
                    successMessage = L["Pages.Agent.Login.LoginSuccessful"];
                    
                    await Task.Delay(500);
                    Navigation.NavigateTo("/agent/orders");
                }
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                errorMessage = L["Pages.Agent.Login.InvalidCredentials"];
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.BadRequest)
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.Error ?? L["Pages.Agent.Login.ValidationError"];
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.Error ?? L["Pages.Agent.Login.LoginFailed"];
            }
        }
        catch (Exception ex)
        {
            errorMessage = L.GetString("Pages.Agent.Login.ErrorOccurred", ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    public class AgentLoginModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Email is required")]
        [System.ComponentModel.DataAnnotations.EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Password is required")]
        public string Password { get; set; } = string.Empty;
    }

    public class AgentLoginResponse
    {
        public string? Jwt { get; set; }
    }

    public class ErrorResponse
    {
        public string? Error { get; set; }
    }
}
