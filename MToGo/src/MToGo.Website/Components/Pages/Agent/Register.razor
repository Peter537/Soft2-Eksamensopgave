@page "/agent/register"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject CultureService CultureService
@inject ILocalizerService L
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>@L["Pages.Agent.Register.PageTitle"]</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">@L["Pages.Agent.Register.Title"]</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @errorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success" role="alert">
                            @successMessage
                        </div>
                    }

                    <EditForm Model="@model" OnValidSubmit="HandleRegistration" FormName="AgentRegisterForm">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label for="name" class="form-label">@L["Pages.Agent.Register.Name"]</label>
                            <InputText id="name" class="form-control" @bind-Value="model.Name" placeholder="@L["Pages.Agent.Register.NamePlaceholder"]" />
                            <ValidationMessage For="@(() => model.Name)" />
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">@L["Pages.Agent.Register.Email"]</label>
                            <InputText id="email" class="form-control" @bind-Value="model.Email" placeholder="@L["Pages.Agent.Register.EmailPlaceholder"]" />
                            <ValidationMessage For="@(() => model.Email)" />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">@L["Pages.Agent.Register.Password"]</label>
                            <InputText id="password" type="password" class="form-control" @bind-Value="model.Password" placeholder="@L["Pages.Agent.Register.PasswordPlaceholder"]" />
                            <ValidationMessage For="@(() => model.Password)" />
                        </div>

                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">@L["Pages.Agent.Register.ConfirmPassword"]</label>
                            <InputText id="confirmPassword" type="password" class="form-control" @bind-Value="model.ConfirmPassword" placeholder="@L["Pages.Agent.Register.ConfirmPasswordPlaceholder"]" />
                            <ValidationMessage For="@(() => model.ConfirmPassword)" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>@L["Pages.Agent.Register.CreatingAccount"]</span>
                                }
                                else
                                {
                                    <span>@L["Pages.Agent.Register.RegisterButton"]</span>
                                }
                            </button>

                            <div class="mt-3 text-center">
                                <p class="mb-0">@L["Pages.Agent.Register.HasAccount"] <a href="/agent/login">@L["Pages.Agent.Register.LoginHere"]</a></p>
                            </div>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private AgentRegisterModel model { get; set; } = new();
    
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading;

    protected override void OnInitialized()
    {
        CultureService.OnChange += OnCultureChanged;
    }

    private void OnCultureChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        CultureService.OnChange -= OnCultureChanged;
    }

    private async Task HandleRegistration()
    {
        isLoading = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            if (model.Password != model.ConfirmPassword)
            {
                errorMessage = L["Pages.Agent.Register.PasswordMismatch"];
                return;
            }

            var request = new AgentRegisterRequest
            {
                Name = model.Name,
                Email = model.Email,
                Password = model.Password
            };

            var response = await Http.PostAsJsonAsync("/api/v1/agents", request);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<AgentRegisterResponse>();
                successMessage = L.GetString("Pages.Agent.Register.RegistrationSuccessful", result?.Id ?? 0);
                model = new();
                await Task.Delay(1500);
                Navigation.NavigateTo("/agent/login");
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.BadRequest)
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.Error ?? L["Pages.Agent.Register.RegistrationFailed"];
            }
            else
            {
                errorMessage = L["Pages.Agent.Register.RegistrationFailed"];
            }
        }
        catch (Exception ex)
        {
            errorMessage = L.GetString("Pages.Agent.Register.ErrorOccurred", ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    public class AgentRegisterModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Name is required")]
        public string Name { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Email is required")]
        [System.ComponentModel.DataAnnotations.EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Password is required")]
        [System.ComponentModel.DataAnnotations.MinLength(8, ErrorMessage = "Password must be at least 8 characters")]
        public string Password { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Please confirm your password")]
        [System.ComponentModel.DataAnnotations.Compare("Password", ErrorMessage = "Passwords do not match")]
        public string ConfirmPassword { get; set; } = string.Empty;
    }

    public class AgentRegisterRequest
    {
        public string Name { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }

    public class AgentRegisterResponse
    {
        public int Id { get; set; }
    }

    public class ErrorResponse
    {
        public string? Error { get; set; }
    }
}
