@page "/agent/register"
@using MToGo.Website.Components.Shared
@inject NavigationManager Navigation
@inject CultureService CultureService
@inject ILocalizerService L
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>@L["Pages.Agent.Register.PageTitle"]</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <RegisterForm 
                FormModel="@model"
                ApiEndpoint="/api/v1/agents"
                RedirectUrl="/agent/login"
                CardTitle="@L["Pages.Agent.Register.Title"]"
                CardHeaderClass=""
                ButtonClass="btn-primary"
                ButtonText="@L["Pages.Agent.Register.RegisterButton"]"
                FormName="AgentRegisterForm"
                TransformRequest="TransformToRequest"
                CustomValidation="ValidatePasswords">
                <ChildContent>
                    <div class="mb-3">
                        <label for="name" class="form-label">@L["Pages.Agent.Register.Name"]</label>
                        <InputText id="name" class="form-control" @bind-Value="model.Name" placeholder="@L["Pages.Agent.Register.NamePlaceholder"]" />
                        <ValidationMessage For="@(() => model.Name)" />
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">@L["Pages.Agent.Register.Email"]</label>
                        <InputText id="email" class="form-control" @bind-Value="model.Email" placeholder="@L["Pages.Agent.Register.EmailPlaceholder"]" />
                        <ValidationMessage For="@(() => model.Email)" />
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">@L["Pages.Agent.Register.Password"]</label>
                        <InputText id="password" type="password" class="form-control" @bind-Value="model.Password" placeholder="@L["Pages.Agent.Register.PasswordPlaceholder"]" />
                        <ValidationMessage For="@(() => model.Password)" />
                    </div>

                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">@L["Pages.Agent.Register.ConfirmPassword"]</label>
                        <InputText id="confirmPassword" type="password" class="form-control" @bind-Value="model.ConfirmPassword" placeholder="@L["Pages.Agent.Register.ConfirmPasswordPlaceholder"]" />
                        <ValidationMessage For="@(() => model.ConfirmPassword)" />
                    </div>
                </ChildContent>
                <AdditionalLinks>
                    <div class="mt-3 text-center">
                        <p class="mb-0">@L["Pages.Agent.Register.HasAccount"] <a href="/agent/login">@L["Pages.Agent.Register.LoginHere"]</a></p>
                    </div>
                </AdditionalLinks>
            </RegisterForm>
        </div>
    </div>
</div>

@code {
    private AgentRegisterModel model { get; set; } = new();

    protected override void OnInitialized()
    {
        CultureService.OnChange += OnCultureChanged;
    }

    private void OnCultureChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        CultureService.OnChange -= OnCultureChanged;
    }

    private string? ValidatePasswords()
    {
        if (model.Password != model.ConfirmPassword)
        {
            return L["Pages.Agent.Register.PasswordMismatch"];
        }
        return null;
    }

    private object TransformToRequest(object formModel)
    {
        var m = (AgentRegisterModel)formModel;
        return new AgentRegisterRequest
        {
            Name = m.Name,
            Email = m.Email,
            Password = m.Password
        };
    }

    public class AgentRegisterModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Name is required")]
        public string Name { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Email is required")]
        [System.ComponentModel.DataAnnotations.EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Password is required")]
        [System.ComponentModel.DataAnnotations.MinLength(8, ErrorMessage = "Password must be at least 8 characters")]
        public string Password { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Please confirm your password")]
        [System.ComponentModel.DataAnnotations.Compare("Password", ErrorMessage = "Passwords do not match")]
        public string ConfirmPassword { get; set; } = string.Empty;
    }

    public class AgentRegisterRequest
    {
        public string Name { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
}
