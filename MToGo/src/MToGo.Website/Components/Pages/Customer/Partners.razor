@page "/customer/partners"
@inject HttpClient Http
@inject CultureService CultureService
@inject AuthService Auth
@inject NavigationManager Navigation
@inject ILocalizerService L
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>@L["Pages.Customer.Partners.PageTitle"]</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">@L["Pages.Customer.Partners.Title"]</h3>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">@L["Pages.Customer.Partners.Loading"]</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                @errorMessage
                            </div>
                        }

                        @if (partners == null || !partners.Any())
                        {
                            <div class="alert alert-info">
                                @L["Pages.Customer.Partners.NoPartners"]
                            </div>
                        }
                        else
                        {
                            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                                @foreach (var partner in partners)
                                {
                                    <div class="col">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <h5 class="card-title">@partner.Name</h5>
                                                <p class="card-text text-muted">
                                                    <i class="bi bi-geo-alt"></i> @partner.Address
                                                </p>
                                            </div>
                                            <div class="card-footer bg-transparent">
                                                <a href="/customer/partners/@partner.Id/menu" class="btn btn-primary w-100">
                                                    @L["Pages.Customer.Partners.ViewMenu"]
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                            @if (partnersResponse != null && partnersResponse.TotalPages > 1)
                            {
                                <nav aria-label="Partners pagination" class="mt-4">
                                    <ul class="pagination justify-content-center">
                                        <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                                            <button type="button" class="page-link" @onclick="() => ChangePage(currentPage - 1)" disabled="@(currentPage <= 1)">
                                                <span aria-hidden="true">&laquo;</span>
                                                <span class="visually-hidden">Previous</span>
                                            </button>
                                        </li>

                                        @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(partnersResponse.TotalPages, currentPage + 2); i++)
                                        {
                                            var pageNumber = i;
                                            <li class="page-item @(i == currentPage ? "active" : "")">
                                                <button type="button" class="page-link" @onclick="() => ChangePage(pageNumber)">@i</button>
                                            </li>
                                        }

                                        <li class="page-item @(currentPage >= partnersResponse.TotalPages ? "disabled" : "")">
                                            <button type="button" class="page-link" @onclick="() => ChangePage(currentPage + 1)" disabled="@(partnersResponse != null && currentPage >= partnersResponse.TotalPages)">
                                                <span aria-hidden="true">&raquo;</span>
                                                <span class="visually-hidden">Next</span>
                                            </button>
                                        </li>
                                    </ul>
                                </nav>
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private PaginatedPartnersResponse? partnersResponse;
    private List<PartnerResponse>? partners;
    private string? errorMessage;
    private bool isLoading = true;
    private int currentPage = 1;
    private const int PageSize = 10;

    protected override void OnInitialized()
    {
        CultureService.OnChange += OnCultureChanged;
    }

    private void OnCultureChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        CultureService.OnChange -= OnCultureChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadPartners();
            StateHasChanged();
        }
    }

    private async Task LoadPartners()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var offset = (currentPage - 1) * PageSize;
            var response = await Http.GetAsync($"/api/v1/partners?offset={offset}&limit={PageSize}");

            if (response.IsSuccessStatusCode)
            {
                partnersResponse = await response.Content.ReadFromJsonAsync<PaginatedPartnersResponse>();
                partners = partnersResponse?.Partners?.ToList();
            }
            else
            {
                errorMessage = L["Pages.Customer.Partners.LoadFailed"];
            }
        }
        catch (Exception ex)
        {
            errorMessage = L.GetString("Pages.Customer.Partners.ErrorOccurred", ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ChangePage(int page)
    {
        if (page < 1 || (partnersResponse != null && page > partnersResponse.TotalPages))
        {
            return;
        }

        currentPage = page;
        await LoadPartners();
        StateHasChanged();
    }

    public class PartnerResponse
    {
        public int Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public string Address { get; set; } = string.Empty;
    }

    public class PaginatedPartnersResponse
    {
        public IEnumerable<PartnerResponse> Partners { get; set; } = new List<PartnerResponse>();
        public int TotalCount { get; set; }
        public int Page { get; set; }
        public int PageSize { get; set; }
        public int TotalPages { get; set; }
    }
}
