@page "/register"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject CultureService CultureService
@inject ILocalizerService L
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>@L["Pages.Register.PageTitle"]</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">@L["Pages.Register.Title"]</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @errorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success" role="alert">
                            @successMessage
                        </div>
                    }

                    <EditForm Model="@model" OnValidSubmit="HandleRegistration" FormName="RegisterForm">
                        <DataAnnotationsValidator />
                        
                        <div class="mb-3">
                            <label for="name" class="form-label">@L["Pages.Register.Name"]</label>
                            <InputText id="name" class="form-control" @bind-Value="model.Name" placeholder="@L["Pages.Register.NamePlaceholder"]" />
                            <ValidationMessage For="@(() => model.Name)" />
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">@L["Pages.Register.Email"]</label>
                            <InputText id="email" class="form-control" @bind-Value="model.Email" placeholder="@L["Pages.Register.EmailPlaceholder"]" />
                            <ValidationMessage For="@(() => model.Email)" />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">@L["Pages.Register.Password"]</label>
                            <InputText id="password" type="password" class="form-control" @bind-Value="model.Password" placeholder="@L["Pages.Register.PasswordPlaceholder"]" />
                            <ValidationMessage For="@(() => model.Password)" />
                        </div>

                        <div class="mb-3">
                            <label for="deliveryAddress" class="form-label">@L["Pages.Register.DeliveryAddress"]</label>
                            <InputText id="deliveryAddress" class="form-control" @bind-Value="model.DeliveryAddress" placeholder="@L["Pages.Register.DeliveryAddressPlaceholder"]" />
                            <ValidationMessage For="@(() => model.DeliveryAddress)" />
                        </div>

                        <div class="mb-3">
                            <label for="phoneNumber" class="form-label">@L["Pages.Register.PhoneNumber"]</label>
                            <InputText id="phoneNumber" class="form-control" @bind-Value="model.PhoneNumber" placeholder="@L["Pages.Register.PhoneNumberPlaceholder"]" />
                            <ValidationMessage For="@(() => model.PhoneNumber)" />
                        </div>

                        <div class="mb-3">
                            <label for="notificationMethod" class="form-label">@L["Pages.Register.NotificationPreference"]</label>
                            <InputSelect id="notificationMethod" class="form-select" @bind-Value="model.NotificationMethod">
                                <option value="Email">@L["Pages.Register.NotificationEmail"]</option>
                                <option value="Sms">@L["Pages.Register.NotificationSms"]</option>
                                <option value="Push">@L["Pages.Register.NotificationPush"]</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => model.NotificationMethod)" />
                        </div>

                        <div class="mb-3">
                            <label for="languagePreference" class="form-label">@L["Pages.Register.LanguagePreference"]</label>
                            <InputSelect id="languagePreference" class="form-select" @bind-Value="model.LanguagePreference">
                                <option value="en">English</option>
                                <option value="da">Dansk</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => model.LanguagePreference)" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>@L["Pages.Register.CreatingAccount"]</span>
                                }
                                else
                                {
                                    <span>@L["Pages.Register.RegisterButton"]</span>
                                }
                            </button>

                            <div class="mt-3 text-center">
                                <p class="mb-0">@L["Pages.Register.HasAccount"] <a href="/login">@L["Pages.Register.LoginHere"]</a></p>
                                <p class="mb-0">@L["Pages.Register.RestaurantQuestion"] <a href="/partner/register">@L["Pages.Register.RestaurantRegister"]</a></p>
                                <p class="mb-0">@L["Pages.Register.AgentQuestion"] <a href="/agent/register">@L["Pages.Register.AgentRegister"]</a></p>
                            </div>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private RegisterModel model { get; set; } = new();
    
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading;

    protected override void OnInitialized()
    {
        CultureService.OnChange += OnCultureChanged;
    }

    private void OnCultureChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        CultureService.OnChange -= OnCultureChanged;
    }

    private async Task HandleRegistration()
    {
        isLoading = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var response = await Http.PostAsJsonAsync("/api/v1/customers", model);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<RegisterResponse>();
                successMessage = L.GetString("Pages.Register.RegistrationSuccessful", result?.Id ?? 0);
                CultureService.SetCulture(model.LanguagePreference);
                model = new(); // Reset form
                Navigation.NavigateTo("/login");
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.Error ?? L["Pages.Register.RegistrationFailed"];
            }
        }
        catch (Exception ex)
        {
            errorMessage = L.GetString("Pages.Register.ErrorOccurred", ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    public class RegisterModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Name is required")]
        public string Name { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Email is required")]
        [System.ComponentModel.DataAnnotations.EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Password is required")]
        [System.ComponentModel.DataAnnotations.MinLength(8, ErrorMessage = "Password must be at least 8 characters")]
        public string Password { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Delivery address is required")]
        public string DeliveryAddress { get; set; } = string.Empty;

        public string? PhoneNumber { get; set; }

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Notification method is required")]
        public string NotificationMethod { get; set; } = "Email";

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Language preference is required")]
        public string LanguagePreference { get; set; } = "en";
    }

    public class RegisterResponse
    {
        public int Id { get; set; }
    }

    public class ErrorResponse
    {
        public string? Error { get; set; }
    }
}
