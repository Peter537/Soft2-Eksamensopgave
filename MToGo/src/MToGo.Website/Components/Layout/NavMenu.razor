@inject CultureService CultureService
@inject AuthService Auth
@inject NavigationManager Navigation
@inject HttpClient Http
@inject ILocalizerService L
@implements IDisposable
@rendermode InteractiveServer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">MToGo</a>

        <select class="form-select form-select-sm ms-2" style="width: auto;" value="@CultureService.CurrentCulture" @onchange="HandleLanguageChange">
            <option value="en">@L["Layout.NavMenu.English"]</option>
            <option value="da">@L["Layout.NavMenu.Danish"]</option>
        </select>        
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> @L["Layout.NavMenu.Home"]
            </NavLink>
        </div>
        @if (Auth.IsCustomer)
        {
            <div class="nav-item px-3">
            <NavLink class="nav-link" href="customer/partners">
            <span class="bi bi-shop-nav-menu" aria-hidden="true"></span> @L["Layout.NavMenu.BrowsePartners"]
            </NavLink>
            </div>
            <div class="nav-item px-3">
            <NavLink class="nav-link" href="customer/orders">
            <span class="bi bi-bag-nav-menu" aria-hidden="true"></span> @L["Layout.NavMenu.MyOrders"]
            </NavLink>
            </div>
            <div class="nav-item px-3">
            <NavLink class="nav-link" href="profile">
            <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> @L["Layout.NavMenu.Profile"]
            </NavLink>
            </div>
            <div class="nav-item px-3">
            <button class="nav-link" @onclick="HandleSignOutCustomer">
            <span class="bi bi-box-arrow-right-nav-menu" aria-hidden="true"></span> @L["Layout.NavMenu.SignOut"]
            </button>
            </div>
        }
        else if (Auth.IsPartner)
        {
            <div class="nav-item px-3">
            <NavLink class="nav-link" href="partner/dashboard">
            <span class="bi bi-speedometer2-nav-menu" aria-hidden="true"></span> @L["Layout.NavMenu.Dashboard"]
            </NavLink>
            </div>

            <div class="nav-item px-3">
            <NavLink class="nav-link" href="@($"/partner/{Auth.Id}/incoming-orders")">
            <span class="bi bi-inbox-nav-menu" aria-hidden="true"></span> @L["Layout.NavMenu.IncomingOrders"]
            </NavLink>
            </div>

            <div class="nav-item px-3">
            <NavLink class="nav-link" href="@($"/partner/{Auth.Id}/menu")">
            <span class="bi bi-menu-button-wide-nav-menu" aria-hidden="true"></span> @L["Layout.NavMenu.MyMenu"]
            </NavLink>
            </div>

            <div class="nav-item px-3">
            <button class="nav-link" @onclick="HandleSignOutPartner">
            <span class="bi bi-box-arrow-right-nav-menu" aria-hidden="true"></span> @L["Layout.NavMenu.SignOut"]
            </button>
            </div>
        }
        else if (Auth.IsAgent)
        {
            <div class="nav-item px-3">
            <NavLink class="nav-link" href="agent/dashboard">
            <span class="bi bi-speedometer2-nav-menu" aria-hidden="true"></span> @L["Layout.NavMenu.Dashboard"]
            </NavLink>
            </div>

            <div class="nav-item px-3">
            <NavLink class="nav-link" href="agent/available-jobs">
            <span class="bi bi-briefcase-nav-menu" aria-hidden="true"></span> @L["Layout.NavMenu.AvailableJobs"]
            </NavLink>
            </div>

            <div class="nav-item px-3">
            <NavLink class="nav-link" href="agent/orders">
            <span class="bi bi-truck-nav-menu" aria-hidden="true"></span> @L["Layout.NavMenu.AgentOrders"]
            </NavLink>
            </div>

            <div class="nav-item px-3">
            <button class="nav-link" @onclick="HandleSignOutAgent">
            <span class="bi bi-box-arrow-right-nav-menu" aria-hidden="true"></span> @L["Layout.NavMenu.SignOut"]
            </button>
            </div>
        }
        else if (Auth.IsManagement)
        {
            <div class="nav-item px-3">
            <NavLink class="nav-link" href="management/">
            <span class="bi bi-speedometer2-nav-menu" aria-hidden="true"></span> @L["Layout.NavMenu.Dashboard"]
            </NavLink>
            </div>

            <div class="nav-item px-3">
            <button class="nav-link" @onclick="HandleSignOutManagement">
            <span class="bi bi-box-arrow-right-nav-menu" aria-hidden="true"></span> @L["Layout.NavMenu.SignOut"]
            </button>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
            <NavLink class="nav-link" href="register">
            <span class="bi bi-person-plus-fill-nav-menu" aria-hidden="true"></span> @L["Layout.NavMenu.Register"]
            </NavLink>
            </div>
            <div class="nav-item px-3">
            <NavLink class="nav-link" href="login">
            <span class="bi bi-box-arrow-in-right-nav-menu" aria-hidden="true"></span> @L["Layout.NavMenu.Login"]
            </NavLink>
            </div>
        }

    @code {
        protected override void OnInitialized()
        {
            CultureService.OnChange += OnCultureChanged;
            Auth.OnChange += OnAuthChanged;
        }

        private void OnCultureChanged()
        {
            InvokeAsync(StateHasChanged);
        }

        private void OnAuthChanged()
        {
            InvokeAsync(StateHasChanged);
        }

        public void Dispose()
        {
            CultureService.OnChange -= OnCultureChanged;
            Auth.OnChange -= OnAuthChanged;
        }
    }
    </nav>
</div>

@code {
    private async Task HandleSignOutCustomer()
    {
        await Auth.LogoutAsync();
        Navigation.NavigateTo("/login", forceLoad: true);
    }

    private async Task HandleSignOutAgent()
    {
        await Auth.LogoutAsync();
        Navigation.NavigateTo("/agent/login", forceLoad: true);
    }

    private async Task HandleSignOutPartner()
    {
        await Auth.LogoutAsync();
        Navigation.NavigateTo("/partner/login", forceLoad: true);
    }

    private async Task HandleSignOutManagement()
    {
        await Auth.LogoutAsync();
        Navigation.NavigateTo("/management/login", forceLoad: true);
    }

    private async Task HandleLanguageChange(ChangeEventArgs e)
    {
        var culture = e.Value?.ToString() ?? "en";
        CultureService.SetCulture(culture);

        // If user is logged in as customer, persist the language preference to the backend
        if (Auth.IsCustomer)
        {
            try
            {
                var updateRequest = new { LanguagePreference = culture };
                await Http.PatchAsJsonAsync($"/api/v1/customers/{Auth.Id}", updateRequest);
            }
            catch
            {
                // Silently fail - the UI is already updated
            }
        }
    }
}

