{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "SystemLogsDirectory": "/var/log/mtogo"
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "ThisIsAVerySecretKeyForJwtTokenGeneration123456!",
    "Issuer": "MToGo",
    "Audience": "MToGoUsers",
    "ExpirationInHours": 24
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=mtogo_logs;Username=mtogo;Password=mtogo_password"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "GroupId": "log-collector-service",
    "Topics": ["app-logs"],
    "AutoOffsetReset": "Earliest",
    "EnableAutoCommit": true,
    "EnableAutoOffsetStore": false
  }
}
