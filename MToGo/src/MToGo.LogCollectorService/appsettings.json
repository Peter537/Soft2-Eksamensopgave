{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "SystemLogsDirectory": "/var/log/mtogo"
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "MToGo-Super-Secret-Key-That-Should-Be-At-Least-256-Bits-Long-For-Security!",
    "Issuer": "MToGo",
    "Audience": "MToGo-Services",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=mtogo_logs;Username=mtogo;Password=mtogo_password"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "GroupId": "log-collector-service",
    "Topics": ["app-logs"],
    "AutoOffsetReset": "Earliest",
    "EnableAutoCommit": true,
    "EnableAutoOffsetStore": false
  }
}
